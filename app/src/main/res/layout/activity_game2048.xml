<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game2048">

    <GridLayout
        android:id="@+id/gridBoard4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:background="#97f2f2"
        android:columnCount="4"
        android:padding="5dp"
        android:rowCount="4">

        <ImageView
            android:id="@+id/image00"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image01"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image02"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image03"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:srcCompat="@drawable/tile2" />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/tile4" />

        <ImageView
            android:id="@+id/image12"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image13"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:srcCompat="@drawable/tile8" />

        <ImageView
            android:id="@+id/image20"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:srcCompat="@drawable/tile16" />

        <ImageView
            android:id="@+id/image21"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:srcCompat="@drawable/tile32" />

        <ImageView
            android:id="@+id/image22"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:srcCompat="@drawable/tile64" />

        <ImageView
            android:id="@+id/image23"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="2"
            app:srcCompat="@drawable/tile128" />

        <ImageView
            android:id="@+id/image30"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:srcCompat="@drawable/tile256" />

        <ImageView
            android:id="@+id/image31"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:srcCompat="@drawable/tile512" />

        <ImageView
            android:id="@+id/image32"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:srcCompat="@drawable/tile1024" />

        <ImageView
            android:id="@+id/image33"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="2dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="3"
            app:srcCompat="@drawable/tile2048" />
    </GridLayout>

    <ImageView
        android:id="@+id/imageViewUndo"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_above="@+id/gridBoard4x4"
        android:layout_alignStart="@+id/gridBoard4x4"
        android:layout_marginBottom="32dp"
        android:onClick="undoGame"
        app:srcCompat="@drawable/undobutton2" />

    <TextView
        android:id="@+id/textViewHighScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_rectangle"
        android:text="High Score\n"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewHSValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewHighScore"
        android:layout_below="@+id/textViewHighScore"
        android:background="@drawable/round_corner_rectangle_bottom"
        android:text="9999999"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewCurrScore"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner_rectangle"
        android:text="Score\n"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewCurrScoreValue"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textViewCurrScore"
        android:layout_below="@+id/textViewCurrScore"
        android:background="@drawable/round_corner_rectangle_bottom"
        android:text="9999999"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/gridBoard4x4"
        android:layout_alignTop="@+id/imageViewUndo"
        android:background="@drawable/round_btn"
        android:onClick="restartGame"
        android:text="Restart"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="10sp" />


</RelativeLayout>