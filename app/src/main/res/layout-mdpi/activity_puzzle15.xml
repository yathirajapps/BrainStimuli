<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Game2048">

    <TextView
        android:id="@+id/textViewHighScoreMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="5dp"
        android:visibility="invisible"
        android:background="@color/appThemeColor"
        android:fontFamily="@font/baumans"
        android:text="Congratulations! you got a new high score"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <GridLayout
        android:id="@+id/currScoreGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp" >

        <TextView
            android:id="@+id/currResultLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="Current Result"
            android:textAlignment="center"
            android:textColor="@color/appThemeColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewCurrScoreValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:background="@drawable/rnd_corner_txtview"
            android:fontFamily="@font/baumans"
            android:padding="5dp"
            android:text="Time\n00:00:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewNoOfMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_margin="2dp"
            android:background="@drawable/rnd_corner_txtview"
            android:fontFamily="@font/baumans"
            android:padding="5dp"
            android:text="Moves\n000"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </GridLayout>

    <GridLayout
        android:id="@+id/personalBestGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp" >

        <TextView
            android:id="@+id/bestResultLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="2"
            android:layout_row="0"
            android:text="Personal Best"
            android:textAlignment="center"
            android:textColor="@color/appThemeColor"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewHSValue"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_margin="2dp"
            android:background="@drawable/rnd_corner_txtview"
            android:fontFamily="@font/baumans"
            android:padding="5dp"
            android:text="Time\n00:00:00"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewBestMoves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="center_horizontal"
            android:layout_margin="2dp"
            android:background="@drawable/rnd_corner_txtview"
            android:fontFamily="@font/baumans"
            android:padding="5dp"
            android:text="Moves\n000"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="12sp" />

    </GridLayout>

    <GridLayout
        android:id="@+id/gridBoard4x4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="80dp"
        android:background="#97f2f2"
        android:columnCount="4"
        android:padding="5dp"
        android:rowCount="4">

        <ImageView
            android:id="@+id/image00"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:tag="00"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image01"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:tag="01"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image02"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:tag="02"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image03"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="0"
            android:tag="03"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image10"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="1"
            android:tag="10"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            android:tag="11"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="1"
            android:tag="12"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="1"
            android:tag="13"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image20"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="2"
            android:tag="20"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image21"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="2"
            android:tag="21"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image22"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="2"
            android:tag="22"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image23"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="2"
            android:tag="23"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image30"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="0"
            app:layout_gravity="fill"
            app:layout_row="3"
            android:tag="30"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image31"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="1"
            app:layout_gravity="fill"
            app:layout_row="3"
            android:tag="31"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image32"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="2"
            app:layout_gravity="fill"
            app:layout_row="3"
            android:tag="32"
            app:srcCompat="@drawable/tile0" />

        <ImageView
            android:id="@+id/image33"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_column="3"
            app:layout_gravity="fill"
            app:layout_row="3"
            android:tag="33"
            app:srcCompat="@drawable/tile0" />
    </GridLayout>

    <Button
        android:id="@+id/buttonRestart"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_above="@+id/gridBoard4x4"
        android:layout_alignEnd="@+id/gridBoard4x4"
        android:layout_alignRight="@+id/gridBoard4x4"
        android:layout_marginBottom="5dp"
        android:background="@drawable/round_btn"
        android:onClick="restartGame"
        android:fontFamily="@font/baumans"
        android:text="New Game"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="12sp" />

</RelativeLayout>