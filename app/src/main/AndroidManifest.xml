<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yathirajjp.brainstimuli">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <activity android:name=".StartupActivity" />

        <activity
            android:name=".MainMenu"
            android:label="Brain Stimuli"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".QuickMath"
            android:label="Quick Math"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".TrueFalse"
            android:label="True / False"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".Game2048"
            android:label="Game 2048"
            android:parentActivityName=".MainMenu"
            android:screenOrientation="portrait">
        </activity>

        <activity android:name=".Puzzle15"
            android:label="Puzzle 15"
            android:screenOrientation="portrait"
            android:parentActivityName=".MainMenu">
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>